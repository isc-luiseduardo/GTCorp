    </div>
    <div class="col-md-12">
        <article class="galeria">            
            <a href="~/Content/img/GaleriaDesign/ClipSeparadores.JPG" rel="Shadowbox[Diseños]" title="Clip Separadores">
            <img src="~/Content/img/GaleriaDesign/ClipSeparadoresmini.jpg" class="img-responsive"></a>
</article>
    </div>
</div>

<div class="row">
    <div class="col-md-2 list-group-item">
        <span><a href='@Url.Action("Index","GTDesign")' class="btn  btnContactDesign">Regresar</a> </span>
    </div>
    <div class="col-md-2 list-group-item">
        <span><a href='@Url.Action("Contacto","GTDesign")' class="btn  btnContactDesign">Contacto</a> </span>
    </div>
</div>